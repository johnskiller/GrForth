        "version": "0.2.0",
        "configurations": [

                {
                        "type": "lldb",
                        "request": "launch",
                        "name": "Debug executable 'GrForth'",
                        "cargo": {
                                "args": [
                                        "build",
                                        "--bin=GrForth",
                                        "--package=GrForth"
                                ],
                                "filter": {
                                        "name": "GrForth",
                                        "kind": "bin"
                                }
                        },
                        "args": [],
                        "cwd": "${workspaceFolder}"
                },
                {
                        "type": "lldb",
                        "request": "launch",
                        "name": "Debug",     
                        "program": "${workspaceRoot}/target/debug/${workspaceRootFolderName}",
                        "sourceLanguages": ["rust"],
                        "args": [],
                        "cwd": "${workspaceRoot}",
                },
                {
                        "type": "lldb",
                        "request": "launch",
                        "name": "Debug unit tests in executable 'GrForth'",
                        "cargo": {
                                "args": [
                                        "test",
                                        "--no-run",
                                        "--bin=GrForth",
                                        "--package=GrForth"
                                ],
                                "filter": {
                                        "name": "GrForth",
                                        "kind": "bin"
                                }
                        },
                        "args": [],
                        "cwd": "${workspaceFolder}"
                }
        ]
}